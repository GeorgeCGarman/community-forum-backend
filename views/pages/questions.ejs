<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head') %>
</head>
<body>
  <h1>  <%= heading %></h1>
  <ul class="list-group w-50">
    <% questions.forEach(question => { %>
      <li class="list-group-item d-flex justify-content-between align-items-start">
        <a href="/questions?question_id=<%= question.id %>"><%= question.title %></a>
        <span class="badge bg-primary rounded-pill"><%= question.upvotes %></span>
      </li>
    <% }) %>
  </ul>
  <form action="/questions/ask" method="get">
    <button class="btn btn-primary mt-2">New Question</button>
  </form>

  <footer>
    <%- include('../partials/footer') %>
  </footer>
</body>
</html>
